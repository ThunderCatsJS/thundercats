{
  "name": "thundercats",
  "description": "How the Thundercats would build Flux architecture",
  "version": "2.0.0-alpha.5",
  "keywords": [
    "thundercats",
    "react",
    "reactjs",
    "flux",
    "dispatcher",
    "isomorphic",
    "rx",
    "rxjs",
    "frp",
    "reactive"
  ],
  "main": "lib/",
  "bugs": "https://github.com/r3dm/thundercats/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/r3dm/thundercats"
  },
  "scripts": {
    "build": "npm run build-clean && npm run build-global && npm run build-npm",
    "build-clean": "rm -rf lib/* && mkdir lib/global",
    "build-global": "NODE_ENV='production' browserify src/index.js -s ThunderCats -i react -i rx -t babelify  -t browserify-shim -g envify -o lib/global/ThunderCats.js",
    "build-global-min": "NODE_ENV='production' browserify src/index.js -s ThunderCats -i react -i rx -t babelify -t browserify-shim -g envify -p [ minifyify --no-map --uglify [--compress --mangle --dead_code]] -o lib/global/ThunderCats.min.js",
    "build-npm": "babel ./src -d lib/",
    "cover": "istanbul cover _mocha -- --compilers js:./registerWithOptions.js",
    "coverAlls": "istanbul cover _mocha -- --compilers js:./registerWithOptions.js && istanbul-coveralls",
    "lint": "eslint .",
    "preinstall": "npm run build-npm",
    "pretest": "npm run lint",
    "test": "mocha --compilers js:babel/register"
  },
  "browserify-shim": {
    "react": "global:React",
    "rx": "global:Rx"
  },
  "author": {
    "name": "Berkeley Martinez",
    "email": "berkeley@r3dm.com",
    "url": "http://r3dm.com"
  },
  "license": "MIT",
  "dependencies": {
    "debug": "^2.1.3",
    "invariant": "^2.0.0",
    "node-uuid": "^1.4.1",
    "object.assign": "^2.0.1",
    "warning": "^1.0.1"
  },
  "peerDependencies": {
    "react": "^0.13.1",
    "rx": "^2.3.14"
  },
  "devDependencies": {
    "babel": "^5.0.12",
    "babel-eslint": "^3.0.1",
    "babel-runtime": "^5.0.12",
    "babelify": "^6.0.2",
    "browserify": "^10.1.3",
    "browserify-shim": "^3.8.6",
    "chai": "^2.1.1",
    "chai-as-promised": "^5.0.0",
    "envify": "^3.4.0",
    "eslint": "^0.21.0",
    "eslint-plugin-react": "^2.1.1",
    "istanbul": "^0.3.7",
    "istanbul-coveralls": "^1.0.2",
    "jsdom": "^5.0.0",
    "minifyify": "^7.0.0",
    "mocha": "^2.2.1",
    "mocha-istanbul": "^0.2.0",
    "q": "^1.2.0",
    "react": "^0.13.1",
    "rx": "^2.3.14",
    "sinon": "^1.11.1",
    "sinon-chai": "^2.7.0"
  }
}
